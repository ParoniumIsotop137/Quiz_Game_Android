<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/hatter"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0">
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <Button
                        android:text="Új Játék"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" android:id="@+id/btnUjJatek"
                        style="@android:style/Widget.Holo.Light.Button.Inset" android:textColor="#FFEB3B"
                        android:textStyle="bold" android:textAlignment="center" android:textSize="34sp"
                        android:onClick="onClick"/>
                <TextView
                        android:text="Legyen Ön is Milliomos!"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txtFocim" android:textStyle="bold"
                        android:textColor="#FFEB3B" android:textSize="34sp" android:textAlignment="center"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/txtUjKerdes"
                        android:fontFamily="@font/autour_one"
                        android:textSize="16sp" android:textColor="#880E4F" android:textStyle="bold"
                        android:rotation="0" android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:lineSpacingExtra="8sp" android:background="#719ABC"/>
                <CheckBox
                        android:text="A válasz:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/chBoxValasz_A"
                        style="@android:style/Widget.CompoundButton.CheckBox" android:textSize="20sp"
                        android:textColor="#FF9800" android:fontFamily="@font/archivo_medium"
                        android:textAlignment="center" android:background="#11394A" android:minHeight="48dp"
                        android:checked="false"
                        android:onClick="onClick"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txtValasz_A" android:textColor="#121211"
                        android:textAlignment="textStart" android:background="#CDDC39" android:textSize="16sp"
                        android:textStyle="bold"/>
                <CheckBox
                        android:text="B válasz:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/chBoxValasz_B"
                        style="@android:style/Widget.CompoundButton.CheckBox" android:textSize="20sp"
                        android:textColor="#FF9800" android:fontFamily="@font/archivo_medium"
                        android:textAlignment="center" android:background="#11394A" android:minHeight="48dp"
                        android:checked="false"
                        android:onClick="onClick"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txtValasz_B" android:textColor="#121211"
                        android:textAlignment="textStart" android:background="#CDDC39" android:textSize="16sp"
                        android:textStyle="bold"/>
                <CheckBox
                        android:text="C válasz:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/chBoxValasz_C"
                        style="@android:style/Widget.CompoundButton.CheckBox" android:textSize="20sp"
                        android:textColor="#FF9800" android:fontFamily="@font/archivo_medium"
                        android:textAlignment="center" android:background="#11394A" android:minHeight="48dp"
                        android:checked="false"
                        android:onClick="onClick"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txtValasz_C" android:textColor="#121211"
                        android:textAlignment="textStart" android:background="#CDDC39" android:textSize="16sp"
                        android:textStyle="bold"/>
                <CheckBox
                        android:text="D válasz:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/chBoxValasz_D"
                        style="@android:style/Widget.CompoundButton.CheckBox" android:textSize="20sp"
                        android:textColor="#FF9800" android:fontFamily="@font/archivo_medium"
                        android:textAlignment="center" android:background="#11394A" android:minHeight="48dp"
                        android:checked="false"
                        android:onClick="onClick"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txtValasz_D" android:textColor="#121211"
                        android:textAlignment="textStart" android:background="#CDDC39" android:textSize="16sp"
                        android:textStyle="bold"/>
                <Button
                        android:text="Helyes válasz mutatása"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/btnEredmeny" android:textSize="20sp"
                        android:textColor="#AD1457" android:textStyle="bold|italic" android:textAlignment="center"
                        android:fontFamily="@font/black_ops_one" android:background="#38BECF"
                        android:textAllCaps="true" android:onClick="onClick"/>
                <Button
                        android:text="Következő"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/btnTovabb"
                        style="@android:style/Widget.Material.Button.Small" android:textColor="#EF5350"
                        android:textSize="20sp" android:textStyle="bold" android:textAlignment="center"
                        android:background="#4A2983" android:onClick="onClick"/>
                <Button
                        android:text="Megallás"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/btnMegall"
                        style="@android:style/Widget.Material.Button.Small" android:textColor="#EF5350"
                        android:textSize="20sp" android:textStyle="bold" android:textAlignment="center"
                        android:background="#4A2983" android:onClick="onClick"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>